blockquote {
  font-weight: 100
  font-size: .9em
  color: #666
  line-height: 1.4
  position: relative
  margin: 0 40px 0 40px 0
  padding: 3px 20px 3px 20px
  background-color: #cdcdcd
}

blockquote:before,
blockquote:after {
  font-family: Times
  position: absolute
  color: #cdcdcd
  font-size: 4rem
  width: 4rem
  height: 4rem
  font-weight: 800
}

blockquote:before {
  content: '“'
  left: -2.3rem
  top: -1rem
}

blockquote:after {
  content: '”'
  right: -4.3rem
  bottom: -2rem
}

cite {
  line-height: 3
  text-align: left
}




