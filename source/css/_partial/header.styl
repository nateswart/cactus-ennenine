#header
  max-width: 710px
  width: 100%
  margin: 0 auto 3rem auto

  h1, .h1
    letter-spacing: 0.01em
    font-size: 1.5rem
    line-height: 2rem
    font-style: normal
    font-weight: 700
    color: $color-text
    margin-top: 0
    margin-bottom: 0
    antialias()

  a
    color: inherit
    text-decoration: none
    background: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-size: logo-width logo-height
    border-radius: 5px
    -webkit-filter: grayscale(100%)
    filter: grayscale(100%)
  
  #title p
    margin-top: 0px
    padding-top: 0px


#header:hover
  #logo
    -webkit-filter: none
    filter: none

@media screen and (max-width:480px)
  #header #title
    padding-top: (logo-height / 2) - 16
    padding-bottom: (logo-height / 2) - 16
  #title p
    padding-top: 0px